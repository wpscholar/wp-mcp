{
    "name": "wp-mcp/chat-client",
    "description": "WordPress MCP Chat Client with AI integration",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Micah Wood",
            "email": "micah@wpscholar.com",
            "homepage": "https://wpscholar.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=8.0",
        "wordpress/mcp-adapter": "^0.4",
        "wordpress/abilities-api": "^0.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "wp-coding-standards/wpcs": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "WP_MCP\\": "includes/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}